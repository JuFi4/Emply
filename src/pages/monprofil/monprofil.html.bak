<ion-header>

  <ion-navbar>
    <button ion-button icon-only menuToggle>
      <ion-icon name="menu"></ion-icon> 
    </button>
    <ion-title>Mon profil</ion-title>
  </ion-navbar>

</ion-header>
<ion-content padding>
	<form>
	<ion-item>
      <ion-label>Date de naissance :</ion-label> <ion-datetime displayFormat="YYY-MM-DD" [disabled] ="inputDisabled" required [(ngModel)]="user.DateNaissance"></ion-datetime>
    </ion-item>
    <ion-item>
      <ion-label>Nom :</ion-label> <ion-input type = "text"  [disabled] ="inputDisabled" required [(ngModel)]="user.nom">{{user.nom}}</ion-input>    
    </ion-item>
    <ion-item>
      <ion-label>Prénom :</ion-label> <ion-input type = "text" [disabled] ="inputDisabled" required [(ngModel)]="user.prenom"></ion-input>
    </ion-item>
    <ion-item>
      <ion-label>Adresse :</ion-label> <ion-input type = "text" [disabled] ="inputDisabled" required [(ngModel)]="user.adresse"></ion-input>
    </ion-item>
    <ion-item>
      <ion-label>Adresse suite :</ion-label> <ion-input type = "text" [disabled] ="inputDisabled" required [(ngModel)]="user.suppAdresse"></ion-input>
    </ion-item>
    <ion-item>
      <ion-label>Code postale :</ion-label> <ion-input type = "number" [disabled] ="inputDisabled" required [(ngModel)]="user.codePostale"></ion-input>
    </ion-item>
    <ion-item>
      <ion-label>Ville :</ion-label> <ion-input type = "text" [disabled] ="inputDisabled" required [(ngModel)]="user.ville" ></ion-input>
    </ion-item>
    <ion-item>
      <ion-label>Téléphone Fixe :</ion-label> <ion-input type = "text" [disabled] ="inputDisabled" required [(ngModel)]="user.telFix"></ion-input>
    </ion-item>
    <ion-item>
      <ion-label>Télephone Mobile :</ion-label> <ion-input type = "text" [disabled] ="inputDisabled" required [(ngModel)]="user.telMobile"></ion-input>-->
    </ion-item>
    <button ion-button type="submit" (click)= "modifier()" block>Modifier</button>
    <button ion-button type="submit" (click)= "enregistrer()" block>Enregistrer</button> 
    <h5>Mon mot de passe : </h5>
    <button ion-button (click)="doChangementMDP()">Modifier mon mot de passe</button>    
    <h5>Mon adresse mail : </h5>
    <button ion-button (click)="doChangementMail()">Modifier mon email</button> 
    </form>
</ion-content>



